body
    padding: 0
    margin: 0
    height: 100vh

*
    font-family: monospace, sans-serif

#root
    height: 100%

.route-wrapper
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 100%

.route-wrapper
    background-color: #154353;
    .scroll-wrapper
        flex-grow: 1
        display: flex
        flex-direction: column
        justify-content: space-between
        .footer-wrapper
            padding: 12px
            display: flex
            justify-content: center
            align-items: center
            color: #ffffff
            flex-wrap: wrap
            .footer-item
                padding: 0px 8px
                border-right: 1px solid #838383
                font-size: 20px
                font-weight: bold
                a
                    color: inherit
                    text-decoration: none
                    &:hover
                        color: #1890ff;
                &:last-child
                    margin-right: 0
                    padding-right: 0
                    border-right: none
            .author-info
                .heart-icon
                a
                    color: #fb8c00

@media only screen and (max-width: 767px)
    .footer-wrapper
        flex-direction: column
        .footer-item
            border: none